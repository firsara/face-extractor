#!/usr/bin/env node

const path = require('path');
const exec = require('node-exec-promise').exec;

const [, , inputFile] = process.argv;

exec(`npm run --prefix ${path.resolve(path.join(__dirname, '..'))} extract ${inputFile}`).then(function(out) {
  console.log(out.stdout, out.stderr);
}, function(err) {
  console.error(err);
});
